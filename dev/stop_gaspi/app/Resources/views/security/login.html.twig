{# app/Resources/views/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form name="utilisateur" method="post" action="{{ path('login') }}">
        <div class="form-group"><label class="control-label required" for="utilisateur_username">Username</label><input id="utilisateur_username" name="utilisateur[username]" required="required" class="form-control" type="text"></div>
        <div class="form-group"><label class="control-label required" for="utilisateur_password">Password</label><input id="utilisateur_password" name="utilisateur[password]" required="required" class="form-control" type="password"></div>
        <button type="submit">Login !</button>
    </form>


{% endblock %}