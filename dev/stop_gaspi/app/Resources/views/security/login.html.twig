{# app/Resources/views/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post" action="{{ path('login') }}">
        <div class="form-group">
            <label class="control-label required" for="utilisateur_username">Username</label>
            <input id="utilisateur_username" name="_username" required="required" class="form-control" type="text" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label class="control-label required" for="utilisateur_password">Password</label>
            <input id="utilisateur_password" name="_password" required="required" class="form-control" type="password">
        </div>
        <button class="btn" type="submit">Login !</button>
    </form>
{% endblock %}